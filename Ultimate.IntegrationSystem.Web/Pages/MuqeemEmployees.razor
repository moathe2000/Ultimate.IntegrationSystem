<style>
    /* نفس خلفية employees */
    body, .page-root {
        background: #f5f5f9;
    }

    :root {
        --soft-bg: rgba(0,0,0,.035);
        --soft-brd: rgba(0,0,0,.10);
        --radius: 12px;
    }

    /* رأس الموظف */
    .emp-header {
        border: 1px solid var(--soft-brd);
        border-radius: var(--radius);
        background: #fff;
        padding: 16px;
    }

    .emp-header-grid {
        row-gap: 12px;
    }

    .emp-avatar {
        width: 44px;
        height: 44px;
        font-weight: 700;
    }

    .emp-chips .mud-chip {
        border-radius: 10px;
    }

    /* كروت/جداول ناعمة مثل employees */
    .card-soft {
        border: 1px solid var(--soft-brd);
        border-radius: var(--radius);
        background: #fff;
    }

    /* كرت تفاعلي عام (لو احتجته) */
    .card-click {
        cursor: pointer;
        transition: background .2s, box-shadow .2s, transform .08s;
    }

        .card-click:hover {
            background: #f7f9ff;
            box-shadow: 0 6px 16px rgba(0,0,0,.08);
            border-color: #cfe0ff;
        }

        .card-click:active {
            transform: translateY(1px);
        }

    /* تبويبات من اليمين */
    .tabs-rtl .mud-tabs-toolbar {
        justify-content: flex-end; /* يلصق التبويبات باليمين */
        flex-direction: row-reverse; /* يعكس ترتيب الألسنة */
        border-bottom: 1px solid var(--soft-brd);
    }

    .tabs-rtl .mud-tab {
        direction: rtl;
        text-align: right;
    }

    /* توحيد محاذاة خلايا الجداول يمين */
    .mud-table-cell {
        text-align: right;
    }

    /* شريط أدوات ضيق */
    .tight-toolbar .mud-button {
        height: 36px;
    }
</style>

