@using MudBlazor


<div dir="rtl">
    <!-- رأس القائمة: أيقونة + عنوان النظام -->
    <div class="d-flex align-center pa-4">
        <MudIcon Icon="@Icons.Material.Filled.Hub" Size="Size.Large" Color="Color.Primary" />
        <MudText Typo="Typo.h6" Class="me-2">UIS </MudText>
    </div>
    <MudDivider Class="mb-2" />

    <MudNavMenu Dense="true">
        <MudNavLink Href="/" Icon="@Icons.Material.Filled.Home" Match="NavLinkMatch.All">
            الصفحة الرئيسية
        </MudNavLink>
        <!-- الإعدادات -->
        <MudNavGroup Title="الإعدادات" Icon="@Icons.Material.Filled.Settings" ExpandIconPlacement="End">
            <MudNavLink Href="/settings/app" Icon="@Icons.Material.Filled.Tune">
                إعدادات التطبيق
            </MudNavLink>
            <MudNavLink Href="/settings/connection" Icon="@Icons.Material.Filled.SettingsEthernet">
                إعدادات الاتصال
            </MudNavLink>
        </MudNavGroup>

        <MudNavGroup Title="الموارد البشرية" Icon="@Icons.Material.Filled.People" ExpandIconPlacement="End">
            <MudNavLink Href="/employees" Icon="@Icons.Material.Filled.List">الموظفين </MudNavLink>
            <MudNavLink Href="/muqeemEmployees" Icon="@Icons.Material.Filled.Badge">خدمات مقيم </MudNavLink>
            <MudNavLink Href="/MuqeemDashboard" Icon="@Icons.Material.Filled.Hub" Match="NavLinkMatch.Prefix">
                مقيم — لوحة التحكم
            </MudNavLink>

        </MudNavGroup>

     
        <MudNavLink Href="/logout" Icon="@Icons.Material.Filled.ExitToApp">تسجيل الخروج</MudNavLink>
    </MudNavMenu>
</div>