@using MudBlazor
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> L

<MudNavMenu Dense="true">
    <MudNavLink Href="/" Icon="@Icons.Material.Filled.Home" Match="NavLinkMatch.All">
        @L["Home"]
    </MudNavLink>

    <MudNavGroup Title="@L["Employees"]" Icon="@Icons.Material.Filled.People" Match="NavLinkMatch.Prefix" Expanded="true">
        <MudNavLink Href="/employees" Icon="@Icons.Material.Filled.List">@L["ViewEmployees"]</MudNavLink>
        <MudNavLink Href="/residents" Icon="@Icons.Material.Filled.Badge">@L["Residents"]</MudNavLink>
        <MudNavLink Href="/insurance" Icon="@Icons.Material.Filled.HealthAndSafety">@L["InsuranceAndPension"]</MudNavLink>
    </MudNavGroup>

    <MudNavLink Href="/organizationalplan" Icon="@Icons.Material.Filled.Assessment">@L["OrganizationalPlan"]</MudNavLink>
    <MudNavLink Href="/logout" Icon="@Icons.Material.Filled.ExitToApp">@L["Logout"]</MudNavLink>
</MudNavMenu>
