@using MudBlazor
@using Microsoft.Extensions.Localization
@using System.Globalization
@inject IStringLocalizer<SharedResources> L
@inherits LayoutComponentBase

@code {
    private bool _drawerOpen = true;
    private bool _isDark = false;

    private readonly MudTheme LightTheme = new();
    private readonly MudTheme DarkTheme = new()
    {
        PaletteDark = new PaletteDark()
    };
}

<MudLayout>
    <MudDrawer Variant="DrawerVariant.Persistent"
               Open="@_drawerOpen"
               Elevation="1"
               ClipMode="DrawerClipMode.Never">
        <NavMenu />
    </MudDrawer>

    <MudMainContent Dir="@(CultureInfo.CurrentUICulture.TextInfo.IsRightToLeft ? "rtl" : "ltr")">
        <MudAppBar Color="Color.Primary" Elevation="1">
            <MudIconButton Icon="@Icons.Material.Filled.Menu"
                           Color="Color.Inherit"
                           Edge="Edge.Start"
                           OnClick="() => _drawerOpen = !_drawerOpen" />
            <MudText Typo="Typo.h6">@L["AppTitle"]</MudText>
            <MudSpacer />
            <MudIconButton Icon="@(_isDark? Icons.Material.Filled.LightMode : Icons.Material.Filled.DarkMode)"
                           Color="Color.Inherit"
                           OnClick="() => _isDark = !_isDark" />
            <MudAvatar Size="Size.Medium" Class="ml-2">J</MudAvatar>
        </MudAppBar>

        <!-- تغيير الثيم فعلياً -->
        <MudThemeProvider Theme="@(_isDark? DarkTheme : LightTheme)" />

        <div class="p-4">
            @Body
        </div>
    </MudMainContent>
</MudLayout>
