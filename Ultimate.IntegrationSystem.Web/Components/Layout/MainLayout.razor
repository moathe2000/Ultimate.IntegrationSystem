@using MudBlazor
@using System.Globalization
@inherits LayoutComponentBase

@code {
    private bool _drawerOpen = true;
    private bool _isDark = true;

    // MudBlazor 8.x: استخدم PaletteLight/PaletteDark كـ "قيم" وليس new Palette()
    private readonly MudTheme LightTheme = new()
    {
        PaletteLight = new PaletteLight
        {
            Primary = "#6C63FF",
            Secondary = "#673AB7"
        }
    };

    private readonly MudTheme DarkTheme = new()
    {
        PaletteDark = new PaletteDark
        {
            Primary = "#6C63FF",
            Secondary = "#B39DDB"
        }
    };

    private bool IsRtl => CultureInfo.CurrentUICulture.TextInfo.IsRightToLeft;


}

<MudLayout>

    <!-- الدرج: ننقل مكانه حسب RTL -->
    <MudDrawer Open="@_drawerOpen"
               Elevation="1"
               Variant="DrawerVariant.Persistent"
               ClipMode="DrawerClipMode.Never"
               Anchor="@(IsRtl ? Anchor.End : Anchor.Start)"
               Class="app-drawer">

        <!-- لو NavMenu في namespace مختلف، تأكد من @using المناسب -->
        <NavMenu />
        @* أو الاسم المؤهل بالكامل:
        <Ultimate.IntegrationSystem.Web.Components.Nav.NavMenu /> *@
    </MudDrawer>

    <MudMainContent>
        <MudAppBar Color="Color.Primary" Elevation="1" Dense="true" Class="app-bar">
            <MudIconButton Icon="@Icons.Material.Filled.Menu"
                           Color="Color.Inherit"
                           Edge="Edge.Start"
                           OnClick="() => _drawerOpen = !_drawerOpen" />
            <MudText Typo="Typo.h6" Class="ml-2">Ultimate Integration System</MudText>
            <MudSpacer />
            <MudIconButton Icon="@(_isDark? Icons.Material.Filled.LightMode : Icons.Material.Filled.DarkMode)"
                           Color="Color.Inherit"
                           OnClick="() => _isDark = !_isDark" />
            <MudAvatar Size="Size.Medium" Class="ml-2">M</MudAvatar>
        </MudAppBar>

        <!-- مبدّل الثيم -->
        <MudThemeProvider Theme="@(_isDark? DarkTheme : LightTheme)" />

        <!-- نحدد اتجاه الصفحة هنا -->
        <div dir="@(IsRtl ? "rtl" : "ltr")" class="p-4">
            @Body
        </div>
    </MudMainContent>
</MudLayout>
